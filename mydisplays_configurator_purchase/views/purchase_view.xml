<?xml version="1.0"?>
<odoo>

    <record id="purchase_order_form_config_session" model="ir.ui.view">
        <field name="name">purchase.order.form.config.session</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree//field[@name='name']" position="after">
                <field name="cfg_session_id" invisible="0" readonly="1"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/form//field[@name='company_id']" position="before">
                <field name="cfg_session_id" readonly="1"/>
            </xpath>
        </field>
    </record>

</odoo>