<?xml version="1.0"?>
<odoo>

    <record id="sale_order_form_config_session" model="ir.ui.view">
        <field name="name">sale.order.form.config.session</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree//field[@name='name']" position="before">
                <field name="cfg_session_id" invisible="0"/>
            </xpath>

            <xpath expr="//field[@name='order_line']/form//field[@name='customer_lead']/.." position="after">
                <field name="cfg_session_id"/>
            </xpath>

        </field>
    </record>

</odoo>
