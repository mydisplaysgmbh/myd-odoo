<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Base view for website configuration body -->
    <template id="product_configurator" inherit_id="website_product_configurator.product_configurator" name="Product Configuration Interface">
        <xpath expr="//form[@id='product_config_form']//span[hasclass('config_product_weight')]" position="attributes">
            <t t-set="json_session_vals" t-value="vals.get('json_session_vals')"/>
            <attribute name="t-esc">('{0:,.%sf}' % (weight_prec)).format(json_session_vals.get("weight", 0))</attribute>
        </xpath>
        <xpath expr="//form[@id='product_config_form']//span[hasclass('config_product_price')]" position="replace">
            <t t-set="price" t-value="product_tmpl.with_context(product_template_sessions={product_tmpl.id: cfg_session.id}, pricelist=pricelist.id).price"/>
            <span class="config_product_price" itemprop="price" style="display:none;" t-esc="price"/>
            <span itemprop="priceCurrency" style="display:none;" t-esc="website.currency_id.name"/>
            <span class="config_product_price" t-esc="price"
                    t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
        </xpath>
    </template>

    <template id="cfg_product_variant_inherit" name="Product" inherit_id="website_product_configurator.cfg_product_variant">
        <xpath expr="//div[@id='product_details']" position="replace">
            <div class="col-md-6 col-xl-4 offset-xl-2" id="product_details">
                <div>
                    <div class="form-inline">
                        <t t-call="website_sale.pricelist_list">
                            <t t-set="_classes"></t>
                        </t>
                    </div>
                </div>
                <h1 itemprop="name" t-field="product_variant.name">Product Name</h1>
                <span itemprop="url" style="display:none;" t-esc="'%s/website_product_configurator/configuration/%s' % (request.httprequest.url_root, slug(config_session))"/>
                <form action="/shop/cart/update" method="POST">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                    <div class="js_product js_main_product">
                        <t t-placeholder="select">
                            <input type="hidden" class="product_id" name="product_id" t-att-value="product_id.id" />
                            <input type="hidden" class="product_template_id" name="product_template_id" t-att-value="product_tmpl.id" />
                            <input type="hidden" class="config_session_id" name="config_session_id" t-att-value="config_session.id" />
                            <input type="hidden" class="bom_id" name="bom_id" t-att-value="json_vals.get('bom', [])" />
                            <input type="hidden" class="product_qty" name="product_qty" t-att-value="product_qty"/>
                            <div class="col-xs-12">
                                <ul class="product_vals">
                                    <t t-if="config_session">
                                        <t t-foreach="config_session.value_ids" t-as="val">
                                            <li>
                                                <strong t-field="val.attribute_id.name"/>:
                                                <span t-field="val.name"/>
                                            </li>
                                        </t>
                                    </t>
                                    <t t-foreach="custom_vals" t-as="cust_key">
                                        <li t-if="custom_vals[cust_key].get('value')">
                                            <strong t-esc="attr_data[cust_key].get('name')"/>:
                                            <t t-if="attr_data[cust_key].get('custom_type') != 'binary'">
                                                <span t-esc="custom_vals[cust_key].get('value')"/>
                                            </t>
                                            <t t-elif="attr_data[cust_key].get('custom_type') == 'binary'">
                                                <img class="myd-img" alt="set company logo" t-attf-src="data:image/gif;base64, #{custom_vals[cust_key].get('value')}"/>
                                            </t>
                                        </li>
                                    </t>
                                </ul>
                            </div>
                        </t>
                        <div class="config_price">
                            <h4 class="oe_price_h4 css_editable_mode_hidden">
                                <t t-set="curr_pl" t-value="website.get_current_pricelist()" />
                                <t t-set="price"
                                    t-value="product_id.with_context(product_sessions={product_id.id: config_session.id}, pricelist=curr_pl.id).price"/>
                                <span itemprop="price" style="display:none;" t-esc="price"/>
                                <span itemprop="priceCurrency" style="display:none;" t-esc="website.currency_id.name"/>
                                <b class="oe_price" style="white-space: nowrap;" t-esc="price" t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                            </h4>
                        </div>
                        <a role="button" id="add_to_cart" class="btn btn-primary btn-lg mt8 js_check_product a-submit" href="#">Add to Cart</a>
                    </div>
                </form>
                <hr t-if="product_tmpl.description_sale" />
                <div class="o_not_editable">
                    <p t-field="product_tmpl.description_sale" class="text-muted" />
                </div>
                <hr />
                <p class="text-muted">
                  30-day money-back guarantee<br />
                  Free Shipping in U.S.<br />
                  Buy now, get in 2 days
                </p>
            </div>
        </xpath>
    </template>

    <template id="config_form_select_inherit" inherit_id="website_product_configurator.config_form_select">
        <xpath expr="//t[@t-foreach='cfg_step_attribute_line_ids']//label[hasclass('control-label')]" position="replace">
            <label t-att-class="'control-label' + (line.invisible and ' d-none' or '')"
                t-esc="line.attribute_id.name" t-att-data-oe-id="line.attribute_id.id">
            </label>
        </xpath>
        <xpath expr="//t[@t-foreach='cfg_step_attribute_line_ids']//select[@t-att-data-oe-id='line.attribute_id.id']" position="attributes">
            <attribute name="t-att-class">'form-control config_attribute' + (' required_config_attrib' if (not available_val and line.required and line.custom) or (available_val and line.required) else '') + (' d-none' if (not line.value_ids or line.invisible) else '')</attribute>
        </xpath>
        <xpath expr="//t[@t-foreach='cfg_step_attribute_line_ids']//select[@t-att-data-oe-id='line.attribute_id.id']//t[@t-foreach='line.value_ids']//option[contains(@t-att-class, 'config_attr_value')]//t" position="replace">
            <t t-esc="value.name"/>
            <t t-set="price_extra" t-value="config_cache.get('attr_vals', {}).get('%s' % (value.id), {}).get('price')"/>
            <t t-if="price_extra">
                (+<t t-esc="price_extra" t-options="{'widget': 'monetary', 'display_currency': pricelist.currency_id, 'from_currency': website.currency_id}"/>)
            </t>
        </xpath>
        <xpath expr="//t[@t-foreach='cfg_step_attribute_line_ids']//select[@t-att-data-oe-id='line.attribute_id.id']/option[1]" position="attributes">
            <attribute name="t-att-class">'d-none' if line.required else ''</attribute>
        </xpath>
    </template>

    <template id="config_form_radio_inherit" inherit_id="website_product_configurator.config_form_radio">
        <xpath expr="//t[@t-foreach='cfg_step_attribute_line_ids']//label[hasclass('control-label')]" position="replace">
            <label t-att-class="'control-label' + (line.invisible and ' d-none' or '')"
                t-esc="line.attribute_id.name" t-att-data-oe-id="line.attribute_id.id">
            </label>
        </xpath>
        <xpath expr="//t[@t-foreach='cfg_step_attribute_line_ids']//fieldset[@t-att-data-oe-id='line.attribute_id.id']" position="attributes">
            <attribute name="t-att-class">'form-control config_attribute' + (' required_config_attrib' if (not available_val and line.required and line.custom) or (available_val and line.required) else '') + (' d-none' if (not line.value_ids or line.invisible) else '')</attribute>
        </xpath>
        <xpath expr="//t[@t-foreach='cfg_step_attribute_line_ids']//fieldset[@t-att-data-oe-id='line.attribute_id.id']//t[@t-foreach='line.value_ids']//t[@t-set='value_label']" position="attributes">
            <attribute name="t-value">value.name</attribute>
        </xpath>
        <xpath expr="//t[@t-foreach='cfg_step_attribute_line_ids']//fieldset[@t-att-data-oe-id='line.attribute_id.id']//t[@t-foreach='line.value_ids']//span[hasclass('label_config_attr_value_radio')]" position="after">
            <t t-set="price_extra" t-value="config_cache.get('attr_vals', {}).get('%s' % (value.id), {}).get('price')"/>
            <t t-if="price_extra">
                <span class="label_config_price_extra_radio">(+<t t-esc="price_extra" t-options="{'widget': 'monetary', 'display_currency': pricelist.currency_id, 'from_currency': website.currency_id}"/>)</span>
            </t>
        </xpath>
    </template>
</odoo>
