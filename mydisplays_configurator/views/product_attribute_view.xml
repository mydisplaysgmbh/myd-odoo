<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="product_attribute_form_view">
        <field name="name">mydisplays.product.attribute.form.view</field>
        <field name="model">product.attribute</field>
        <field name="inherit_id" ref="product_configurator.product_attribute_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='required']" position="before">
                <field name="json_name"/>
                <field name="invisible"/>
            </xpath>
        </field>
    </record>

    <record id="product_attribute_value_form_view" model="ir.ui.view" >
        <field name="name">mydisplays.config.product.attribute.value.form.view</field>
        <field name="model">product.attribute.value</field>
        <field name="inherit_id" ref="product_configurator.product_attribute_value_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group" position="inside">
                <field name="json_context" widget="ace" options="{'mode': 'python'}"/>
            </xpath>

            <xpath expr="//field[@name='product_id']" position="after">
                <field name="workcenter_id"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="product_attribute_value_tree_view">
        <field name="name">mydisplays.product.attribute.value.tree.view</field>
        <field name="model">product.attribute.value</field>
        <field name="inherit_id" ref="product.variants_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="product_id"/>
                <field name="workcenter_id"/>
            </xpath>
        </field>
    </record>

</odoo>
