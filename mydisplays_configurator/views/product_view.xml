<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">mydisplays.product.configurator.product.template.form</field>
        <field name="model">product.template</field>
        <field name="priority">16</field>
        <field name="inherit_id" ref="product_configurator.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='config_step_line_ids']" position="after">
                <separator colspan="4" string="Computed Vals Formula"/>
                <field name="computed_vals_formula" widget="ace" options="{'mode': 'python'}"/>
                <separator colspan="4" string="Config Cache"/>
                <field name="config_cache_debug" readonly="True" widget="ace" options="{'mode': 'python'}"/>
            </xpath>
            <xpath expr="//field[@name='attribute_line_ids']//field[@name='required']" position="before">
                <field name="is_website_visible" invisible="not context.get('default_config_ok', False)"/>
            </xpath>
            <xpath expr="//field[@name='attribute_line_ids']//field[@name='required']" position="attributes">
                <attribute name="attrs">{'readonly': [('is_website_visible','!=',True)]}</attribute>
                <attribute name="force_save">1</attribute>
            </xpath>
            <xpath expr="//page[@name='configurator']//field[@name='config_line_ids']//tree//field[@name='domain_id']" position="after">
                <field name="product_tmpl_id" invisible="1"/>
            </xpath>
            <xpath expr="//page[@name='configurator']//field[@name='config_line_ids']//tree//field[@name='domain_id']" position="attributes">
                <attribute name="context">{'check_website_visible': True, 'product_tmpl_id': product_tmpl_id}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
